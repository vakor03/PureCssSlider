{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": ["metarhia", "plugin:sonarjs/recommended"],
    "parserOptions": {
        "ecmaVersion": 2021
    },
    "plugins": ["sonarjs"],
    "globals": {
        "BigInt": true
    },
    "rules": {
        "sonarjs/cognitive-complexity": ["error", 15]
    }
}
